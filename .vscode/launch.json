{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run FastAPI App",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/backend/main.py",
            "console": "integratedTerminal",
            "args": [
                "uvicorn",
                "main:app",
                "--reload"
            ],
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        }
    ]
}
